.download 
  text-align: center
  padding: 3em 0
  .u-wrapper 
    > p 
      margin-bottom: 3em


  &-grid 
    margin-top: 3em
    display: grid
    grid-row-gap: 3em
    margin: 0 1em
  &-item 
    box-shadow: 0 10px 20px -5px alpha(hsl(229, 8%, 60%), .4)
    border-radius: 1em
    padding: 1.5em
    padding-top: 2.5em
    background: url('../images/bg-dots.svg') repeat-x center bottom 100px
    .u-h3 
      margin-bottom: .5em 
      margin-top: 1.5em
    .u-p 
      margin-bottom: 4em
      margin-top: 0
    
