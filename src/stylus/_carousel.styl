.carousel 
  text-align: left 
  margin: 2em 0
  &-detail
    &[open]
      .carousel-header
        border: none
        &::-webkit-details-marker
          color: var(--softRed)
  &-header 
    font-size: .9em
    padding: 1.5em 0
    border-bottom: 1px solid alpha(hsl(229, 8%, 60%), .5)
    outline: none
    &::-webkit-details-marker
      color: var(--softBlue)
      float: right 